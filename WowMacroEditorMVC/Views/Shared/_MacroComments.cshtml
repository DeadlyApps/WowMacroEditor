@model IEnumerable<WowMacroEditorMVC.Models.Comment>
@if (Model.Count() > 0)
{
    <h3 class="ui-widget-header ui-corner-all ui-state-active">
        Comments</h3>
    <div class="ui-widget-content ui-corner-all content">
        <table>
            @foreach (var item in Model)
            { 
            
                <tr>
                    <td>
                        @Html.UserTag(item.UserID)
                    </td>
                    <td style="vertical-align:text-top;">
                        @Html.DisplayFor(modelItem => item.Text)
                        @if (HttpContext.Current.User.Identity.IsAuthenticated)
                        {
                            <br />
                            if (AuthUtil.GetUserID().Value == item.UserID)
                            {
                            @Html.ActionLink("Delete", "Delete", new { id = item.CommentID })
                            }
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
}